{% extends 'layout.html.twig' %}
    {% block content %}
       
  <section id="content">
    <div class="container">
		<div class="row">
    <div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12">
		<a class="btn btn-primary" href="/twig/news/">⇦</a>
					<article class="eventList ">
					<form method="post" action="" class="row" enctype="multipart/form-data">
						<div class="row mt-5 mb-3">
							<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mt-5 mb-5">
								<h1 class="text-center text-uppercase">Crear noticia</h1>
							</div>
						</div>
					<div class="row">
						<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mt-5 mb-5">
							<label class="form-label" for="titulo"> Título: </label>
							<input class="form-control" name="titulo" type="text" value="">
						</div>
					</div>
					<div class="row">
						<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mt-5 mb-5">
							<label class="form-label" for="texto"> Texto: </label>
							<textarea name="texto" class="form-control"></textarea>
						</div>
					</div>
					<div class="row">
						<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mt-5 mb-5">
							<label for="imagen"> Imagen: </label>
							<input class="form-control" type="file" name="imagen">
						</div>
					</div>

					<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12  mt-5 mb-5">
						<button type="submit" class="btn btn-primary mb-3 col-lg-3">Crear</button>
					</div>
					</article>


             
      </div>
    </div>
  </section>
</div>
{% endblock %}