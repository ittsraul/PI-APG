{% extends 'layout.html.twig' %}
    {% block content %}

<section id="content">
	<div class="container">
		<div class="row">
    <div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12">
		<article class="eventList">
  	<a class="btn btn-primary" href="/twig/detailUser/{{user.getId()}}">â‡¦</a>
    <h1>Actualizar ficheros para <strong> {{ user.getName() }} {{ user.getSurnames() }} </strong></h1>

      <form method="post" action="" class="row ms-3">

      {% for file in userFiles %}
      <div class="row mt-5 mb-3">
			<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mt-5 mb-5">
					<input class="form-control" name="name{{file.getIdFile()}}" type="text" value="{{file.getName()}}">
			</div>
      </div>
      <div class="row mt-5 mb-3">
			<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mt-5 mb-5">
				<input class="form-control" name="type{{file.getIdFile()}}" type="text" value="{{file.getType()}}">
			</div>
      </div>
      <div class="row mt-5 mb-3">
			<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mt-5 mb-5">		
        <input class="form-check-input" type="checkbox" id="isSubmited" name="isSubmited{{file.getIdFile()}}"{% if file.isIsSubmited() == true %} checked {% endif %}>
         <label class="form-check-label" for="isSubmited">El fichero ha sido entregado por el usuario?</label>
      </div>
      </div>
      {% endfor %}
        <div class="row mt-5 mb-3">
				<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mt-5 mb-5">	
          <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
        </div>
      </form>
      </article>
      </div>
    </div>
  </div>
  </section>
{% endblock %}
